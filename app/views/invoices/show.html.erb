<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
      <h3 class="panel-title">Invoices</h3>
      </div>

      <div class="panel-body">
        <p>
          <strong>Name:</strong>
          <%= @invoice.company %>
        </p>

        <p>
          <strong>Arabic Name:</strong>
          <%= @invoice.contragent %>
        </p>

        <p>
          <strong>Amount:</strong>
          <%= @invoice.amount %> <%= @invoice.currency %>
        </p>

        <p>
          <strong>Date:</strong>
          <%= @invoice.date %>
        </p>
      </div>

      <div class="panel-footer">
        <div class="btn-group">
          <%= link_to 'Back', invoices_path, class: "btn btn-warning" %>
          <%= link_to 'Edit this invoice', edit_invoice_path(@invoice), class: "btn btn-success" %> 
          <%= link_to 'Delete this invoice', @invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>